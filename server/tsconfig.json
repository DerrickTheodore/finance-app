{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@myfi/infra/*": ["../infra/*"],
      "@myfi/libs/*": ["../libs/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "types.ts",
    "src/routes/auth/controllers/index.ts",
    "src/routes/categories/controllers/index.ts",
    "src/routes/plaid/controller/index.js"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "../infra" }, { "path": "../libs" }]
}
